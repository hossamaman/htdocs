SET SQL_MODE = "NO_AUTO_VALUE_ON_ZERO";
SET AUTOCOMMIT = 0;
START TRANSACTION;
SET time_zone = "+00:00";

ALTER TABLE `wallet` CHANGE `confirmed_sold` `confirmed` VARCHAR(600) CHARACTER SET utf8 COLLATE utf8_general_ci DEFAULT NULL, CHANGE `pending_sold` `pending` VARCHAR(600) CHARACTER SET utf8 COLLATE utf8_general_ci DEFAULT NULL, CHANGE `withdrawal_sold` `withdrawal` VARCHAR(600) CHARACTER SET utf8 COLLATE utf8_general_ci DEFAULT NULL;

ALTER TABLE `websites` DROP `user_points`;

ALTER TABLE `hits`
  DROP `browser`,
  DROP `os`;

ALTER TABLE `exchange` ADD `session_key` VARCHAR(500) NULL AFTER `lasturl_id`;

ALTER TABLE `hits` ADD `country` VARCHAR(60) NULL AFTER `ip`;

ALTER TABLE `plans` DROP `currency`;

ALTER TABLE `plans` ADD `featured` INT(20) NULL AFTER `points`;

ALTER TABLE `payments`
  DROP `plan_id`,
  DROP `kind`;

DROP TABLE settings;

CREATE TABLE `billing` (
  `id` int(20) NOT NULL,
  `user_id` varchar(200) NOT NULL,
  `firstname` varchar(600) DEFAULT NULL,
  `lastname` varchar(600) DEFAULT NULL,
  `street` text,
  `country_code` text,
  `city` text,
  `zipcode` text,
  `state` varchar(650) DEFAULT NULL,
  `status` int(20) DEFAULT NULL,
  `created_at` varchar(200) DEFAULT NULL,
  `updated_at` varchar(200) DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

CREATE TABLE `cards` (
  `id` int(11) NOT NULL,
  `user_id` int(30) DEFAULT NULL,
  `fullname` varchar(650) DEFAULT NULL,
  `number` varchar(650) DEFAULT NULL,
  `month` varchar(650) DEFAULT NULL,
  `year` varchar(650) DEFAULT NULL,
  `cvc` varchar(650) DEFAULT NULL,
  `status` int(20) DEFAULT NULL,
  `created_at` varchar(250) DEFAULT NULL,
  `updated_at` varchar(250) DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf16;

CREATE TABLE `live` (
  `id` int(20) NOT NULL,
  `website_id` int(20) DEFAULT NULL,
  `ip` varchar(600) DEFAULT NULL,
  `country` varchar(250) DEFAULT NULL,
  `city` varchar(500) DEFAULT NULL,
  `latitude` varchar(250) DEFAULT NULL,
  `longitude` varchar(250) DEFAULT NULL,
  `status` int(20) DEFAULT NULL,
  `created_at` varchar(250) DEFAULT NULL,
  `updated_at` varchar(250) DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

CREATE TABLE `payment_cache` (
  `id` int(11) NOT NULL,
  `pid` varchar(550) DEFAULT NULL,
  `data` longtext,
  `expire_at` varchar(550) DEFAULT NULL,
  `status` int(20) DEFAULT NULL,
  `created_at` varchar(250) DEFAULT NULL,
  `updated_at` varchar(250) DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

CREATE TABLE `purchases` (
  `id` int(11) NOT NULL,
  `plan_id` int(20) DEFAULT NULL,
  `user_id` int(20) DEFAULT NULL,
  `amount` varchar(250) DEFAULT NULL,
  `sessions` varchar(250) DEFAULT NULL,
  `websites` varchar(250) DEFAULT NULL,
  `traffic` varchar(250) DEFAULT NULL,
  `status` int(20) DEFAULT NULL,
  `updated_at` varchar(250) DEFAULT NULL,
  `created_at` varchar(250) DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf16;

CREATE TABLE `system_points` (
  `id` int(11) NOT NULL,
  `value` varchar(500) DEFAULT NULL
) ENGINE=InnoDB DEFAULT CHARSET=utf16;

